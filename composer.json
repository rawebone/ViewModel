{
    "name": "rawebone/view-model",
    "description": "This library provides an MVVM approach to view layers with am emphasis on testability and documentation",
    "keywords": [ "mvvm" ],
    "authors": [
        {
            "name": "Nick Rawe",
            "email": "rawebone@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "mustache/mustache": "v2.5.0",
        "twig/twig": "v1.15.0",
        "phly/mustache": "1.2.1",
        "zeptech/annotations": "1.1.0"
    },
    "optional": {
        "zeptech/annotations": "Required if using the MetaData section of the library"
    },
    "autoload": {
        "psr-0": {
            "Rawebone\\ViewModel\\": [ "library/", "tests/" ]
        }
    }
}
